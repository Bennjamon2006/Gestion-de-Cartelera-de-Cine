{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc compilar proyecto",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/src/*.c",
        "-o",
        "${workspaceFolder}/bin/programa"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Ejecutar programa",
      "command": "${workspaceFolder}/bin/programa",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ],
  "version": "2.0.0"
}
